{
  "name": "site",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun run css:watch & bun-react-ssg build --watch",
    "build": "bun run css:build && bun-react-ssg build",
    "serve": "bun-react-ssg serve",
    "css:build": "postcss src/styles/tailwind.css -o dist/styles.css",
    "css:watch": "postcss src/styles/tailwind.css -o dist/styles.css --watch"
  },
  "dependencies": {
    "bun-react-ssg": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "bun-types": "^1.0.1",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.0.0"
  }
}
